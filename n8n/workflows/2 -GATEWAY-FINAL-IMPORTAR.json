        "jsCode": "// =====================================================\n// FILTRAR CONVERSACIONES DE LOS ÃšLTIMOS 10 MINUTOS\n// Si NO hay conversaciÃ³n activa â†’ Retorna [] (para crear nueva)\n// Si SÃ hay conversaciÃ³n activa â†’ Retorna la conversaciÃ³n (para reusar)\n// =====================================================\n\nconst conversations = $input.all();\n\nconsole.log('ğŸ“¥ Total de items recibidos:', conversations.length);\n\n// âœ… PASO 1: FILTRAR objetos vacÃ­os o sin 'id'\nconst validConversations = conversations.filter(item => {\n  const isValid = item.json && item.json.id && item.json.created_at;\n  if (!isValid) {\n    console.log('âš ï¸ Item invÃ¡lido ignorado:', item.json);\n  }\n  return isValid;\n});\n\nconsole.log('âœ… Conversaciones vÃ¡lidas encontradas:', validConversations.length);\n\n// âœ… CASO 1: NO HAY CONVERSACIONES â†’ CREAR NUEVA\nif (validConversations.length === 0) {\n  console.log('ğŸ†• No hay conversaciones previas â†’ El workflow crearÃ¡ una nueva');\n  return [];\n}\n\n// âœ… PASO 2: CALCULAR hace 10 minutos\nconst now = new Date();\nconst tenMinutesAgo = new Date(now.getTime() - 10 * 60 * 1000);\n\nconsole.log('ğŸ• Ahora:', now.toISOString());\nconsole.log('ğŸ• Hace 10 min:', tenMinutesAgo.toISOString());\n\n// âœ… PASO 3: FILTRAR conversaciones de los Ãºltimos 10 minutos\nconst activeConversations = validConversations.filter(item => {\n  const createdAt = new Date(item.json.created_at);\n  const isRecent = createdAt > tenMinutesAgo;\n  const ageMinutes = Math.floor((now - createdAt) / 1000 / 60);\n  \n  console.log(`ğŸ“Š ConversaciÃ³n ${item.json.id.substring(0, 8)}:`, {\n    created_at: createdAt.toISOString(),\n    age_minutes: ageMinutes,\n    is_active: isRecent ? 'âœ… ACTIVA' : 'âŒ EXPIRADA'\n  });\n  \n  return isRecent;\n});\n\n// âœ… CASO 2: NO HAY CONVERSACIÃ“N ACTIVA (todas > 10 min) â†’ CREAR NUEVA\nif (activeConversations.length === 0) {\n  console.log('ğŸ†• No hay conversaciÃ³n activa (todas expiradas) â†’