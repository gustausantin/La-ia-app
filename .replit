[[workflows.workflow]]
name = "Start Development Server"
author = 41843571
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Dev with Host Fix"
author = 41843571
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "concurrently \"npm run server\" \"npx vite --host 0.0.0.0 --port 5173\""

[[workflows.workflow]]
name = "Fresh Dev Start"
author = 41843571
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "concurrently \"npm run server\" \"vite --host 0.0.0.0 --port 5173 --force\""

[[workflows.workflow]]
name = "Dev Server Fixed"
author = 41843571
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "concurrently \"npm run server\" \"vite --host 0.0.0.0 --port 5173 --allowedHosts all\""

