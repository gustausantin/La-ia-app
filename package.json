{
  "name": "la-ia-production",
  "version": "1.0.1",
  "type": "module",
  "description": "La-IA - Sistema de Inteligencia para Restaurantes (includes OPUS 4 & 5)",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"node server.js\" \"vite --host 0.0.0.0 --port 3000 --strictPort\"",
    "dev:simple": "concurrently --kill-others-on-fail \"node server.js\" \"vite --config vite.config.simple.js --host 0.0.0.0 --port 3000 --strictPort\"",
    "server": "node server.js",
    "build": "vite build",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/index.css --minify",
    "preview": "vite preview",
    "lint": "echo 'Linting ready for future implementation'",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk --no-coverage",
    "test:e2e": "vitest run tests/e2e",
    "test:unit": "vitest run src",
    "test:integration": "vitest run tests/integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
  "keywords": [
    "restaurant",
    "reservations",
    "ai",
    "omnichannel",
    "supabase"
  ],
  "author": "La-IA Team",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@supabase/supabase-js": "^2.45.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "d3-scale": "^4.0.2",
    "date-fns": "^2.30.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.3",
    "express-rate-limit": "^8.0.1",
    "framer-motion": "^12.23.12",
    "helmet": "^8.1.0",
    "lucide-react": "^0.540.0",
    "nodemailer": "^7.0.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.48.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.8.0",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zod": "^3.22.0",
    "zustand": "^5.0.8"
  }
}
